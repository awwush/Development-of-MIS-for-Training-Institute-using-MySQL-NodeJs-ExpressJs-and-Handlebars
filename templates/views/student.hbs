<!doctype html>
<html lang="en">

<head>
  {{>bootstrapAndBasicHeader}}
  <link rel="stylesheet" href="/css/student.css" />
</head>

<body>
  {{>headers}}
  <main class="p-4">

    <div class="container-fluid" style="">
      <div class="rightCircle"></div>
      <div class="leftCircle"></div>
      <form action="javascript:void(0)" id="details">
        <div class="row d-flex justify-content-center">
          <div class="col-sm-12 col-md-8 col-lg-4">
            <h3 class="d-flex justify-content-center">Student id creation</h3>
            {{!-- Import or create solo --}}

            <div class="container w-75">
              {{!-- <form action="javascript:void(0)"> --}}
                <hr />
                <div class="mb-3">
                  <label for="name" class="align-items-center form-label">Name</label>
                  <input type="text" class="form-control" id="name" value="" placeholder="" required>
                </div>

                <p>Board : </p>
                <div class="mb-3">
                  <select class="form-select mb-3" id="board" aria-label="Select a board"
                    title="Choose the Board that you study in" required>
                    <option value="">Select a Board</option>
                  </select>
                </div>
                {{!-- <br> --}}
                <p>Standard : </p>
                <div class="mb-3">
                  <select class="form-select mb-3" id="standard" aria-label="Select a Standard"
                    title="Choose the standard that you study in" required>
                    <option value="">Select a Standard</option>
                  </select>
                </div>


                <div class="mb-3">
                  <label for="email" class="form-label">Email address</label>
                  <input type="email" class="form-control" id="email" value="" placeholder="" required>
                </div>
                <div class="mb-3">
                  <label for="mobile" class="form-label">Mobile no.</label>
                  <input type="text" class="form-control" id="mobNo" value="" required>
                </div>


                <div class="row">


                  <div class="gender">
                    <label for="gender" class="form-label">Gender :</label>
                    <input type="radio" value="male" id="male" name="gender" checked />
                    <label for="male" class="radio">Male</label>
                    <input type="radio" value="female" id="female" name="gender" />
                    <label for="female" class="radio">Female</label>
                  </div>
                  <div class="mt-3">
                    <label for="birthday">Birthday:</label>
                    <input class="my-3 form-control" type="date" id="birthday" name="birthday">
                  </div>

                </div>
                <hr />

                {{!--
              </form> --}}
            </div>
          </div>


          <div class="d-flex align-items-center img-fluid col-sm-12 col-md-4 col-lg-6">
            <img class="d-block mx-auto" src="/image/studentAddition.gif">
          </div>

        </div>

        <div class="row featureRowAdmin p-2 mb-3">
          <div class="col-1">
            <p>
              <for class="" type="button" data-bs-toggle="collapse" data-bs-target="#parentDetails"
                aria-expanded="false" aria-controls="parentDetails">
                <img src="/icons/arrow-down-solid.svg" alt="" width="30">
              </for>
            </p>
          </div>
          <div class="col-4">
            <h4>Parent details</h4>
          </div>

          <div class="collapse" id="parentDetails">
            <div class="card card-body col-8">
              <div class="container w-75">
                {{!--
                <hr /> --}}
                <div class="mb-3">
                  <label for="name" class="align-items-center form-label">Father's name</label>
                  <input type="text" class="form-control" id="fatherName" value="" placeholder="">
                </div>
                <div class="mb-3">
                  <label for="name" class="align-items-center form-label">Mother's name</label>
                  <input type="text" class="form-control" id="motherName" value="" placeholder="">
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email address</label>
                  <input type="email" class="form-control" id="parentEmail" value="" placeholder="">
                </div>
                <div class="mb-3">
                  <label for="mobile" class="form-label">Mobile no.</label>
                  <input type="text" class="form-control" id="parentMobNo" value="">
                </div>

                <hr />

                {{!--
      </form> --}}
    </div>
    </div>
    </div>
    </div>


    <div class="row">
      <div class="col-2"></div>
      <div class="form-group col-5">
        <fieldset class="the-fieldset">
          <legend class="the-legend mb-3 h5">Admit to the following classes:</legend>

          <div id="classesHolder">

            {{!-- Dynamic randering here!! --}}

          </div>
          <div class="form-check form-switch form-check-inline pt-2" bis_skin_checked="1"><input
              class="form-check-input" name="nullclass" id="nullclass" type="checkbox" value="0"><label for="gender"
              class="form-label form-check-label">Enroll to all</label></div>

        </fieldset>
      </div>

      <div class=" col-3 d-flex justify-content-evenly">
        <input class="btn btn-warning mx-auto rounded-left" type="reset" value="reset" id="resetbtn"
          data-bs-toggle="tooltip" data-bs-placement="bottom" title="Empty the form">

        <input class="btn btn-info mx-auto rounded-right" type="submit" value="Add student info" id="addStudent"
          data-bs-toggle="tooltip" data-bs-placement="bottom" title="Add details">


      </div>
      <div id="loadingDiv" style="display: none;">
        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true">
        </span> Processing..
      </div>

    </div>
    </form>
    </div>

  </main>
  {{>footers}}
</body>
<script src="/js/student.js"></script>

</html>