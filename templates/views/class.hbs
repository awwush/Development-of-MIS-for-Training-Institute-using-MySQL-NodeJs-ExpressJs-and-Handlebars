<html lang="en">

<head>
  {{>bootstrapAndBasicHeader}}
  <link rel="stylesheet" href="/css/class.css" />
</head>

<body>
  {{>headers}}
  <main>
    <main class="p-4">

      <div class="container-fluid" style="">
        <div class="rightCircle"></div>
        <div class="leftCircle"></div>
        <div class="row d-flex justify-content-center mb-5">
          <div class="col-sm-12 col-md-8 col-lg-4">
            <h3 class="d-flex justify-content-center">Create a class</h3>

            <div class="container w-75">
              <form action="javascript:void(0)">
                <hr />
                <div class="mb-3">
                  <label for="name" class="align-items-center form-label">Class name</label>
                  <input type="text" class="form-control" id="name" value="" placeholder="ex: class 6 - chemistry"
                    required>
                </div>

                <div class="mb-3">
                  <label for="fees" class="align-items-center form-label">Fees in Rs. (per year)</label>
                  <input type="text" class="form-control" id="fees" value="" placeholder="1000" required>
                </div>

                {{!-- Choose a board from list --}}
                <div style="display: flex;">
                  <select class="form-select mb-3" id="board" aria-label="Select a board" required>
                    <option value="">Select a board</option>

                  </select>
                  <button type="button" class="btn pb-3" data-bs-toggle="modal" data-bs-target="#addBoard">
                    <i class="fa fa-plus-circle"></i>
                  </button>

                </div>


                {{!-- Choose a standard to which this class belongs too --}}
                <div style="display: flex;">
                  <select class="form-select mb-3" id="standard" aria-label="Select a standard" required>
                    <option value="">Select standard</option>

                  </select>
                  <button type="button" class="btn pb-3" data-bs-toggle="modal" data-bs-target="#addStandard">
                    <i class="fa fa-plus-circle"></i>
                  </button>

                </div>


                {{!-- Choose a subject from the list --}}
                <div style="display: flex;">
                  <select class="form-select mb-3" id="subject" aria-label="Select a subject" required>
                    <option value="">Select a subject</option>

                  </select>
                  <button type="button" class="btn pb-3" data-bs-toggle="modal" data-bs-target="#addSubject">
                    <i class="fa fa-plus-circle"></i>
                  </button>
                </div>


                {{!-- Assign this class to the teacher --}}
                <div style="display: flex;">
                  <select class="form-select mb-3" id="teacher" aria-label="Select a teacher"
                    title="Choose the faculty who teaches the above mentioned subject" required>
                    <option value="">Assign it to a teacher</option>

                  </select>
                  <button type="button" class="btn pb-3" data-bs-toggle="tooltip" data-bs-placement="right"
                    title="Create a new teacher">
                    <a href="/admin/teacher" target="_blank"><i class="fa fa-external-link"></i></a>

                  </button>
                </div>


                <div class="d-flex justify-content-evenly">
                  <input class="btn btn-primary mx-auto rounded-pill bg-success" type="reset" value="reset"
                    id="resetbtn" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Empty the form">

                  <input class="btn btn-primary mx-auto rounded-pill bg-success" type="submit" value="Add class info"
                    id="addClass" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Add details">


                </div>
                <div id="loadingDiv" style="display: none;">
                  <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true">
                  </span> Processing..
                </div>
              </form>
            </div>
          </div>


          <div class="d-flex align-items-center img-fluid col-sm-12 col-md-4 col-lg-6">
            <img class="d-block mx-auto" src="/image/classAddition.gif">
          </div>

        </div>
      </div>

    </main>
  </main>




  {{!-- Add new board modal --}}

  <div class="modal fade" id="addBoard" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="addBoardLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addBoardLabel">Add board</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="" method="post" name="boardForm">
          <div class="modal-body">

            <div class="">
              <label for="newBoardShortName" class="align-items-center form-label">Short form</label>
              <input type="text" class="form-control" id="newBoardShortName" value="" placeholder="ICSE / SSC / UPPSC"
                required>
              <label for="newBoardFullName py-2" class="align-items-center form-label">Full form</label>
              <input type="text" class="form-control" id="newBoardFullName" value=""
                placeholder="Central Board of Secondary Education" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" onclick="addBoard()">Add</button>
          </div>
        </form>
      </div>
    </div>
  </div>





  {{!-- Add new standard modal --}}

  <div class="modal fade" id="addStandard" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="addStandardLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addStandardLabel">Add standard</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="" method="post" name="standardForm">
          <div class="modal-body">

            <div class="">
              <label for="newStandardName" class="align-items-center form-label">Standard name</label>
              <input type="text" class="form-control" id="newStandardName" value="" placeholder="e.g: arts, 7" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" onclick="addStandard()">Add</button>
          </div>
        </form>
      </div>
    </div>
  </div>





  {{!-- Add new subject modal --}}

  <div class="modal fade" id="addSubject" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="addSubjectLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addSubjectLabel">Add subject</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="" method="post" name="subjectForm">
          <div class="modal-body">

            <div class="">
              <label for="newSubjectName" class="align-items-center form-label">Subject name</label>
              <input type="text" class="form-control" id="newSubjectName" value="" placeholder="e.g: arts, biology"
                required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" onclick="addSubject()">Add</button>
          </div>
        </form>
      </div>
    </div>
  </div>





  {{>footers}}
</body>

<script src="/js/class.js"></script>

</html>